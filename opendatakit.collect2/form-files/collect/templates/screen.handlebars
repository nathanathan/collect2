<div class="odk-screen {{#if enableNavigation}}
        {{#if enableForwardNavigation}}swipeForwardEnabled{{/if}}
        {{#if enableBackNavigation}}swipeBackEnabled{{/if}}
    {{/if}}">
    {{#if showHeader}}
        <div data-role="header" class="odk-toolbar">{{name}}</div>
    {{/if}}
    <div data-role="content" class="odk-scroll odk-container">
    {{#if loading}}
        <div>Please wait...</div>
    {{/if}}
    </div>
    {{#if showFooter}}
    <div class="odk-nav">
    <div data-role="footer" class="ui-state-persist" data-theme="d">
        {{#if enableNavigation}}
            <div data-role="navbar" class="ui-state-persist">
                <ul>
                {{#if enableBackNavigation}}
                    <li><a class="odk-prev-btn" data-icon="arrow-l" data-iconpos="left">back</a></li>
                {{/if}}
                {{#if enableForwardNavigation}}
                    <li><a class="odk-next-btn" data-icon="arrow-r" data-iconpos="right">next</a></li>
                {{/if}}
                </ul>
            </div>
        {{/if}}
    </div>
    </div>
    {{/if}}
</div>